<div class="panel panel-default filterNormal">
  <div class="panel-heading">色から探す</div>
  <div class="panel-body">
    <ul class="list-unstyled">
      <% colors.each do |color| %>
        <li>
          <%= link_to potepan_category_path(taxon.id, color: color.name) do %>
            <%= color.presentation %>
            <span>(<%= taxon.all_products.filter_by_color(color.name).count %>)</span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
