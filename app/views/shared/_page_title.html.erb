<!-- LIGHT SECTION -->
<section class="lightSection clearfix pageHeader">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="page-title">
          <h2><%= content.name %></h2>
        </div>
      </div>
      <div class="col-xs-6">
        <ol class="breadcrumb pull-right">
          <li>
            <%= link_to('HOME', potepan_root_path) %>
          </li>
          <% unless current_page?(controller: 'products', action: 'show') %>
          <li>
            <%= link_to('SHOP', "#") %>
          </li>
          <% end %>
          <li class="active"><%= content.name %></li>
        </ol>
      </div>
    </div>
  </div>
</section>
